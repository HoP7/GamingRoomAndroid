<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <EditText
        android:id="@+id/transfer_add_user-code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="User-code" />

    <EditText
        android:id="@+id/transfer_add_coins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Coins"
        android:layout_below="@id/transfer_add_user-code"/>

    <Button
        android:id="@+id/transfer_add_transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Complete"
        android:layout_below="@id/transfer_add_coins"/>
</RelativeLayout>
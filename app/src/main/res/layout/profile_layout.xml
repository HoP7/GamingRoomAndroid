<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/profile_profile_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="54dp"
        android:textAlignment="center"
        android:text="INFO" />
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_mood_black_24dp"
    android:layout_below="@id/profile_profile_id"/>
    <EditText
        android:id="@+id/profile_firstname_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First name"
        android:layout_below="@+id/profile_profile_id"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/profile_lastname_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last name"
        android:layout_below="@+id/profile_firstname_id"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/profile_email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_below="@id/profile_lastname_id"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/profile_password_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_email_id"
        android:hint="********"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/profile_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_password_id"
        android:text="Edit" />
    <LinearLayout
        android:layout_below="@id/profile_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Add coins"
            android:textAlignment="center"
            />
<Button
    android:layout_width="wrap_content"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:text="Play for coins"
    android:textAlignment="center"
    />
    </LinearLayout>
</RelativeLayout>
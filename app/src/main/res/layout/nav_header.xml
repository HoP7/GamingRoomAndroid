<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/header_id">

    <ImageView
        android:id="@+id/navmenu_image_id"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/navmenu_coins_id"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/ic_headphones_and_microphone" />
   />
    <TextView
        android:id="@+id/navmenu_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kenan Gutic"
        android:layout_below="@id/navmenu_image_id"/>
    <TextView
        android:id="@+id/navmenu_coins_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navmenu_name_id"
        android:text="70 coins"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/progressBar"
        android:layout_alignTop="@+id/progressBar"
        android:text="Next bonus" />
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="135dp"
        android:indeterminate="false"
        android:max="500"
        android:minWidth="200dp"
        android:minHeight="50dp"
        android:progress="1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:layout_alignLeft="@+id/progressBar"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-19dp"
        android:text="0/500" />
</RelativeLayout>